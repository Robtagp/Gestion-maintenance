{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=gnu++14",
        "-g",
        "${file}",
        "${fileDirname}/Equipment.cpp",
        "${fileDirname}/Intervention.cpp",
        "${fileDirname}/Maintenance_Manager.cpp",
        "-I${fileDirname}",
        "-I../header-file",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
